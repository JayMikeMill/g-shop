{
  "compilerOptions": {
    "target": "ES2022", // modern JS output target
    "module": "ESNext", // use ES modules
    "moduleResolution": "Node", // resolve node_modules
    "strict": true, // enable all strict checks
    "esModuleInterop": true, // allow import from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true, // don't generate output
    "baseUrl": ".", // root path for imports
    "paths": {
      "@shared/*": ["src/shared/*"] // adjust according to your structure
    },
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["backend/src/**/*.ts", "frontend/src/**/*.tsx", "prisma/**/*.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
