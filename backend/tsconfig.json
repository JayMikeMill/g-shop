{
  "compilerOptions": {
    "target": "ES2023", // output JS version
    "module": "commonjs", // Node-friendly module system
    "moduleResolution": "node", // resolve modules like Node
    "rootDir": "../", // preserve folder structure for TS source
    "outDir": "dist", // compiled JS output folder
    "esModuleInterop": true, // fix CommonJS imports (like cors, express)
    "allowSyntheticDefaultImports": true, // allow default imports from non-ES modules
    "strict": true, // enable strict type checking
    "skipLibCheck": true, // skip type checks in node_modules
    "forceConsistentCasingInFileNames": true, // file name case consistency
    "noEmitOnError": false, // still emit JS even if TS errors exist

    "baseUrl": "./", // base path for imports
    "paths": { // path aliases
      "@adapters/*": ["src/adapters/*"],
      "@config/*": ["src/config/*"], 
      "@controllers/*": ["src/controllers/*"], 
      "@routes/*": ["src/routes/*"], 
      "@services/*": ["src/services/*"], 
      "@middleware/*": ["src/middleware/*"], 
      "@models/*": ["../shared/models/*"], 
    }
  },

  "include": [
    "./src/**/*.ts", // include all TS files in backend
    "../shared/**/*.ts",  // include shared TS files
  ]
}
